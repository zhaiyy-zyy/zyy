<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.example.fxmaptreasurehunt.controller.GameController?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.fxmaptreasurehunt.controller.GameController">
    <HBox spacing="5" >
        <Label style="-fx-font-size: 15">Score:</Label>
        <Label style="-fx-font-size: 15" fx:id="scoreLabel"></Label>
        <Label style="-fx-font-size: 15">Treasure:</Label>
        <Label style="-fx-font-size: 15" fx:id="treasureLabel"></Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="promptLabel" style="-fx-text-fill: #00000000;-fx-font-size: 9" >Insufficient score, please use the
            'hint' button->
        </Label>
        <Button style="-fx-font-size: 12" fx:id="hintButton" focusTraversable="false">hint</Button>
        <Button style="-fx-font-size: 12" fx:id="restartButton" focusTraversable="false">restart</Button>
        <Button style="-fx-font-size: 12" fx:id="pauseButton" focusTraversable="false">pause</Button>
        <Button style="-fx-font-size: 12" fx:id="magicButton" focusTraversable="false"></Button>
    </HBox>
    <GridPane fx:id="gridPane" prefWidth="500" prefHeight="500">

    </GridPane>
</VBox>

